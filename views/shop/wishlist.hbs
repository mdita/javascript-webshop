{{#each prods}}
	<p>{{ this }}</p>
{{/each}}
<div class="container">
    <div class="row">
		<div class="well">
        <h1 class="text-center">Your Wishlist</h1>
        <div class="list-group">
        {{#each prods}}
          <div class="list-group-item">
                <div class="media col-md-3">
                    <figure class="pull-left">
                        <img class="media-object img-rounded img-responsive"  src="{{ imagePath }}" alt="{{ imagePath }}" >
                    </figure>
                </div>
                <div class="col-md-6">
                    <h4 class="list-group-item-heading"> {{ this.title }} </h4>
                    <p class="list-group-item-text"> {{ this.description }}</p>
                </div>
                <div class="col-md-3 text-center">
                {{#startsWith ../currencyName "usd"}}
                    <h2> $ {{ this.price.usd }} </h2>
                {{ else }}
                 	<h2> â‚¬ {{ this.price.eur}} </h2>
                {{/startsWith }}   
                    <a href="/product/{{ _id }}" role="button" class="btn btn-primary btn-lg btn-block"> View product </a>
                    <a href="/wishlist/remove/{{ _id }}" role="button" class="btn btn-danger  btn-block"> Delete </a>
                    <div class="stars">
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star-empty"></span>
                    </div>
                    <p> {{ this.review.length }} reviews </p>
                </div>
          </div>
          {{/each}}
        </div>
        </div>
	</div>
</div>