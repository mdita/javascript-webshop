<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h1>New password</h1>
        {{#if hasErrors}}
            <div class="alert alert-danger">
                {{# each messages }}
                    <p>{{ this }}</p>
                {{/each}}
            </div>
        {{/if}}
        <form action="/user/confirm-reset-password" method="post">
             <div class="form-group hidden">
                <label for="uuid">E-Mail</label>
                <input type="text" id="uuid" name="uuid" class="form-control" value="{{ uuid }}">
            </div>
            <div class="form-group">
                <label for="password">New password</label>
                <input type="password" id="newPassword" name="newPassword" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="password">Confirm new password</label>
                <input type="password" id="retypePassword" name="retypePassword" class="form-control" required>
            </div>
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            <button type="submit" class="btn btn-primary">change</button>
        </form>
    </div>
</div>