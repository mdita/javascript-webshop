<div class="row hidden">
    <div class="col-md-4 col-md-offset-4">
        <h1>Sign In</h1>
        {{#if hasErrors}}
            <div class="alert alert-danger">
                {{# each messages }}
                    <p>{{ this }}</p>
                {{/each}}
            </div>
        {{/if}}
        <form action="/user/signin" method="post">
            <div class="form-group">
                <label for="email">E-Mail</label>
                <input type="text" id="email" name="email" class="form-control">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control">
            </div>
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            <button type="submit" class="btn btn-primary">Sign In</button>
        </form>
        <p>Create new account <a href="/user/signup">Sign Up</a></p>
        <p><a href="/user/reset-password">Forgot your password ?</a></p>
    </div>
</div>
    <div class="container">
        <div class="row">
         <div class="col-md-4 col-md-offset-4">
        {{#if hasErrors}}
            <div class="alert alert-danger">
                {{# each messages }}
                    <p>{{ this }}</p>
                {{/each}}
            </div>
        {{/if}}
        {{#if successMsg}}
            <div class="alert alert-success">
                    <p>{{ successMsg }}</p>
            </div>
        {{/if}}
            <div class="panel panel-primary">
                <div class="panel-body">
                    <form method="POST" action="/user/signin" role="form">
                        <div class="form-group">
                            <h2>Sign in</h2>
                        </div>
                        <div class="form-group">
                            <strong>Email</strong>
                            <input id="email" name ="email" type="email" maxlength="50" class="form-control">
                        </div>
                        <div class="form-group">
                            <strong>Password</strong>
                            <span class="right"><a href="/user/reset-password">Forgot your password?</a></span>
                            <input id="password" name="password" type="password" maxlength="25" class="form-control">
                        </div>
                        <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                        <div class="form-group" style="padding-top: 12px;">
                            <button id="signinSubmit" type="submit" class="btn btn-success btn-block">Sign in</button>
                        </div>
                        <hr class="left"><small></small>
                        <div class="form-group divider">
                            <a href="/user/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook"></span> Facebook</a>
                            <a href="/user/auth/google" class="btn btn-danger right"><span class="fa fa-google-plus"></span> Google</a>
                            <hr class="left"><small>New to site?</small><hr class="right">
                        </div>
                        <p class="form-group"><a href="/user/signup" class="btn btn-info btn-block">Create an account</a></p>
                        <p class="form-group">By signing in you are agreeing to our <a href="#">Terms of Use</a> and our <a href="#">Privacy Policy</a>.</p>
                    </form>
                </div>
            </div>
            </div>
        </div>
    </div>

